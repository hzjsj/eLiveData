@import "../../utils/iconfont.wxss";

.e-flex-container {
	display: flex;
	width: 100%;
	height: 156rpx;
	background-color: #f39423;
	align-items: center;
}

.e-flex-item {
	width: 250rpx;
	text-align: center;
	color: white;
}


.e-flex-item-mumber {
	font-size: 126%;
	font-weight: bold;
}

.e-flex-item-text {
	font-size: 24rpx;
	padding-top: 8rpx;
}

.e-cell-top {
	height: 150rpx;
	padding: 0rpx 32rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1px solid #f3f3f3;
	background-color: white;
}

.e-cell-top-text {
	font-size: 32rpx;
	color: rgba(0, 0, 0, 0.9);
}

.e-cell-top-text-time {
	margin-top: 8rpx;
	font-size: 28rpx;
	/* line-height: 44rpx; */
	color: rgba(0, 0, 0, 0.4);
}

.iconfont {
	font-size: 28rpx;
	font-weight: bold;
	color: rgba(0, 0, 0, 0.4);

}

.e-cell-top-title {
	font-size: 112%;
	font-weight: bold;
	color: #333;
}

.bg-view {
	background-color: #f39423;
	color: #ffffff;
	font-size: 126%;
	font-weight: bold;
	padding: 0rpx 60rpx;
}

ec-canvas {
	width: 100%;
	height: 100%;
}

.e-bg {
	background-color: #f39423;
}

.containers {
	padding-top: 20rpx;
	background-color: white;
	width: 100%;
	height: 500rpx;
	border-radius: 50rpx 60rpx 0 0;
}